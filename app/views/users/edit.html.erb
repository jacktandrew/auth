<h1>Edit</h1>
<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="field">
    <%= f.label :purse %><br />
    <%= f.number_field :purse %>
  </div>
  
  <div class="button"><%= f.submit %></div>
<% end %>